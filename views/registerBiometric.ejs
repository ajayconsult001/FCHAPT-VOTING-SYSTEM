<!DOCTYPE html>
<html>
<head>
  <title>Register Biometric</title>
  <meta charset="UTF-8">
  <script src="https://unpkg.com/@simplewebauthn/browser"></script>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f7f7f7;
      padding: 2rem;
      max-width: 600px;
      margin: auto;
    }
    h2 {
      text-align: center;
      margin-bottom: 1.5rem;
    }
    input, button {
      width: 100%;
      padding: 10px;
      margin: 0.5rem 0;
      font-size: 1rem;
    }
    .message {
      color: green;
      font-weight: bold;
      text-align: center;
    }
  </style>
</head>
<body>
  <h2>Register Your Fingerprint</h2>
<form action="/generate-registration-options" method="post">

 <form id="bioRegForm" method="POST">
  <input type="text" id="matricNo" name="matricNo" placeholder="Matric Number" required />
  <input type="text" id="studentID" name="studentID" placeholder="Receipt ID" required />
<button onclick="registerBiometric()">Register Fingerprint</button>

</form>

<p id="statusMessage"></p>


 

  <script src="https://cdn.jsdelivr.net/npm/@simplewebauthn/browser@8.1.0/dist/simplewebauthn-browser.umd.min.js"></script>
<script>
  const { startRegistration } = SimpleWebAuthnBrowser;

  const form = document.getElementById('bioRegForm');
  const statusMsg = document.getElementById('statusMessage');

  form.addEventListener('submit', async (e) => {
    e.preventDefault();

    const matricNo = document.getElementById('matricNo').value;
    const studentID = document.getElementById('studentID').value;

    try {
      const resp = await fetch('/generate-registration-options', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ matricNo, studentID })
      });

      const text = await resp.text();
      console.log('Server returned:', text); // üëà Add this to inspect response
      
      if (!resp.ok) {
        statusMsg.innerText = '‚ùå Invalid matric number or student ID.';
        return;
      }

      const options = JSON.parse(text);

      let attResp;
      try {
        attResp = await startRegistration(options);
      } catch (err) {
        console.error('Biometric error:', err);
        statusMsg.innerText = '‚ùå Biometric failed or cancelled.';
        return;
      }

      const verifyResp = await fetch('/verify-registration', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ attResp })
      });

      const result = await verifyResp.json();

      if (result.success) {
        statusMsg.innerText = '‚úÖ Biometric registered! Redirecting...';
        setTimeout(() => {
          window.location.href = result.redirect;
        }, 1500);
      } else {
        statusMsg.innerText = '‚ùå Biometric verification failed.';
      }

    } catch (error) {
      console.error(error);
      statusMsg.innerText = '‚ùå Something went wrong. Check console.';
    }
  });
</script>


</body>
</html>
